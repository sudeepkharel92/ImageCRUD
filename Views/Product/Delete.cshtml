@model ImageCRUD.Models.Product
@{
    ViewData["Title"] = "Delete";
}


<form method="post" enctype="multipart/form-data">
   
        <input asp-for="product_id" hidden />
    

    <div class="row mt-4">
        <div class="col-8">
            <div class="p-3 border">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product_name">Product Name</label>
                    </div>

                    <div class="col-4 ">
                        <input class="form-control" asp-for="product_name" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product_price">Product Price</label>
                    </div>
                    <div class="col-4 ">
                        <input class="form-control" asp-for="product_price" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product_image">Image</label>
                    </div>
                    <div class="col-4 ">
                        <input type="file" name="files" asp-for="product_image" id="uploadBox" />
                    </div>
                </div>
                <input type="submit" value="Delete" class="btn btn-danger"  />
            </div>


        </div>
        <div class="col-4">
            <img src="@WC.ImagePath@Model.product_image" width="90%" height="100%" />
        </div>
    </div>

</form>

