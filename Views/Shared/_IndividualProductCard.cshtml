@model ImageCRUD.Models.Product

<div class="card m-3" style="width: 18rem;" filter @Model.product_name.Replace(' ','_')>
    <img style="object-fit:contain;position:center" class="bd-placeholder-img card-img-top" width="100%" height="180" src="@WC.ImagePath@Model.product_image" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" role="img"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96" /></img>

    <div class="card-body">
        <h6 class="card-title">@Model.product_name</h6>
        <p class="card-text">Rs. @Model.product_price</p>
       <i><p class="card-text">@Model.Category.category_name </p></i>
        <a asp-action="Details" asp-route-id="@Model.product_id" class="btn btn-primary">View Details</a>
    </div>
</div>