@model ImageCRUD.Models.DetailVM


<div class="">
    <form method="post">
        <input asp-for="@Model.Product.product_id" hidden />
        <div class="row">
            <div class="d-none col-12 d-md-block col-md-2">
                </div>
                <div class="col-12 col-md-8">
                    <div class="container backgroundWhite pt-4">
                        <div class="card" style="border:1px solid #000000; ">
                            <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                                <div class="col-12 col-md-6">
                                    <h5 class="text-white">@Model.Product.product_name</h5>
                                </div>
                                <div class="col-12 col-md-6 text-md-right">
                                    <h5 class="text-warning">Rs. @((Model.Product.product_price))</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="container rounded p-2">
                                    <div class="row">
                                        <div class="col-12 col-lg-4 p-1 text-center">
                                            <img src="@WC.ImagePath@Model.Product.product_image" width="100%" class="rounded" />
                                        </div>
                                        <div class="col-12 col-lg-8">
                                            <div class="row pl-3">

                                                <div class="col-12">
                                                    <i><span class="badge p-3 border" style="background-color:lavenderblush">Category:@Model.Product.Category.category_name</span></i>
                                                    @*<span class="badge p-3 border" style="background-color:azure">@Model.Product.ApplicationType.Name</span>
                                                <h3 class="text-success"></h3>

                                                <p class="text-secondary">@Html.Raw(Model.Product.Description) </p>*@
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-dark">
                                <div class="row">

                                    <div class="col-12 col-md-6 pb-1 ">
                                        <a asp-action="Index" class="btn btn-success btn-square form-control " >Back to List</a>
                                    </div>
                                    <div class="col-12 col-md-6 ">
                                        @if (Model.ExistsInCart)
                                        {
                                            <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.product_id" class="btn btn-warning btn-square form-control " >Remove from Cart</a>
                                        }
                                        else
                                        {


                                            <button type="submit" asp-route-id="@Model.Product.product_id" class="btn btn-info form-control" >Add to Cart</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>
</div>